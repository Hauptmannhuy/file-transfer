{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
          "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "ipc.c",
                "microui/src/microui.c",
                "data_context.c",
                "tpool.c",
                "logger.c",
                "-lraylib",
                "-lGL",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lX11",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                // "-fsanitize=address",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
